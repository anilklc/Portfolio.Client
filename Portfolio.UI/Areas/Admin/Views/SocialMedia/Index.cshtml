@model List<AdminSocialMediaDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<div class="wrapper">
    <table>
        <thead>
            <tr>
                <th>SocialMediaName</th>
                <th>SocialMediaIcon</th>
                <th>Url</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SocialMediaName</td>
                    <td><img src="@item.SocialMediaIcon" alt="Alternate Text" /></td>
                    <td>@item.Url</td>
                    <td><a class="btn update-btn" href="/Admin/SocialMedia/UpdateSocialMedia/@item.Id">Update</a></td>
                    <td><a class="btn delete-btn" href="/Admin/SocialMedia/DeleteSocialMedia/@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn create-btn" href="/Admin/SocialMedia/CreateSocialMedia/">Create</a>
</div>

