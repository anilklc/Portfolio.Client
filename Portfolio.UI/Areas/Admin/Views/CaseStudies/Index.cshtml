@model List<AdminCaseStudiesDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<div class="wrapper">
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Detail</th>
                <th>Image</th>
                <th>Url</th>
                <th>Category</th>
                <th>Box Type</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Detail</td>
                    <td><img src="@item.ImageUrl" alt=""></td>
                    <td>@item.Url</td>
                    <td>@item.Category</td>
                    <td>@item.BoxType</td>
                    <td><a class="btn update-btn" href="/Admin/CaseStudies/UpdateCaseStudies/@item.Id">Update</a></td>
                    <td><a class="btn delete-btn" href="/Admin/CaseStudies/DeleteCaseStudies/@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn create-btn" href="/Admin/CaseStudies/CreateCaseStudies/">Create Case Studies</a>
</div>

