@model List<AdminRecentWorkDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<div class="wrapper">
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Detail</th>
                <th>Image</th>
                <th>Url</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Detail</td>
                    <td><img src="@item.ImageUrl" alt=""></td>
                    <td>@item.Url</td>
                    <td><a class="btn update-btn" href="/Admin/RecentWork/UpdateRecentWork/@item.Id">Update</a></td>
                    <td><a class="btn delete-btn" href="/Admin/RecentWork/DeleteRecentWork/@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn create-btn" href="/Admin/RecentWork/CreateRecentWork/">Create</a>
</div>

